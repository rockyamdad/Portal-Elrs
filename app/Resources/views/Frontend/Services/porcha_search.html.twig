{% extends '::base.html.twig' %}
{% block body %}
<div class="page-container">
        <h2 class="caption-color">খতিয়ান/পর্চা অনুসন্ধান</h2><br>
        <div class="portlet-body">
            <form class="form-horizontal search_khatian"  id="search_validation" method="post">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="form-group ">
                                <div class="col-md-11">
                                    <select name="survey" class="select2me form-control survey" data-placeholder="সার্ভে নির্বাচন করুন">
                                        <option></option>
                                        {% for  survey in surveys %}
                                            <option value="{{ survey.id }}">{{ survey.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="form-group ">
                                <div class="col-md-11">
                                    <select name="division" class="select2me form-control po-division" data-placeholder="বিভাগ নির্বাচন করুন">
                                        <option></option>
                                        {% for  division in divisions %}
                                            <option value="{{ division.id }}">{{ division.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="form-group ">
                                <div class="col-md-11">
                                    <input type="text" id="district" name="district" class="form-control po-district" placeholder="জেলা নির্বাচন করুন" />
                                </div>
                            </div>
                        </div>
                    </div><br>

                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="form-group ">

                                <div class="col-md-11">
                                    <input type="hidden" id="upozila" name="upozila" class="form-control po-upozila" placeholder="উপজেলা নির্বাচন করুন">
                                </div>
                            </div>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="form-group ">
                                <div class="col-md-11">
                                    <input type="hidden" id="mouza" name="mouza" class="form-control po-mouza" placeholder="মৌজা নির্বাচন করুন" />
                                </div>
                            </div>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="form-group">
                                <div class="col-md-11">

                                    <input type="text" class="form-control" name="porchaNo" placeholder="খতিয়ান/পর্চা নং ">
                                </div>
                            </div>
                        </div>
                    </div><br>
                    <div class="col-lg-12 col-md-offset-2">
                        <button class="btn green button-save-color search_porcha"   type="submit">অনুসন্ধান</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- BEGIN Portlet PORTLET-->
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>গুরুত্বপূর্ণ তথ্য
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="scroller" style="min-height:100px" data-rail-visible="1" data-rail-color="yellow" data-handle-color="#a1b2bd">
                                <p>খতিয়ান/পর্চা অনুসন্ধানের জন্য এখানে প্রদর্শিত তথ্য প্রদান করুন। অনুসন্ধানের মাধ্যমে আপনি আপানার কাঙ্ক্ষিত খতিয়ান/পর্চা বাছাই করতে পারবেন ও খতিয়ান/পর্চার বিস্তারিত তথ্য দেখতে পারবেন।</p>
                                <p>এখানে প্রদর্শিত খতিয়ান/পর্চা কেবলমাত্র বাক্তিগতভাবে তথ্য যাচাইয়ের জন্য প্রযোজ্য, কোনরূপ দাপ্তরিক কাজের জন্য গ্রহণযোগ্য নয়।</p>
                            </div>
                        </div>
                    </div>
                    <!-- END Portlet PORTLET-->
                </div>
            </div>
            <br>

            </form>
            <div id="data-list">
                {% if porcha is defined and porcha %}
                <div class="row table-responsive">
                    <div class="col-lg-12">
                        <table class="table" id="search_khatian">
                            <thead>
                            <tr>
                                <th>
                                    ক্রম নং
                                </th>

                                <th>
                                    উপজেলা /থানা
                                </th>
                                <th>
                                    মৌজা
                                </th>
                                <th>
                                    জে .এল. নং
                                </th>
                                <th>
                                    খতিয়ান/পর্চা  নং
                                </th>
                                <th>
                                    সার্ভে
                                </th>

                                <th>
                                    খতিয়ানা দেখুন
                                </th>

                            </tr>
                            </thead>
                            <tbody>
                            {% set i =1 %}
                            {% for  p in porcha %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ p.upozila }}</td>
                                    <td>{{ p.mouza }}</td>
                                    <td>{{ p.jlNumber }}</td>
                                    <td>{{ p.khatianNo }}</td>
                                    <td>{{ p.survey }}</td>
                                    <td><a href="{{ path('khatian_show',{'id':p.id}) }}" target="_blank">  <i class="fa fa-file-o"></i> </a></td>

                                </tr>
                                {% set i = i+1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

</div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AppBundle/Resources/public/js/application.js'
    '@AppBundle/Resources/public/js/porcha-option.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascriptBlock %}
{% block documentReady %}
    {{ parent() }}
    PorchaOption.init();


{% endblock %}